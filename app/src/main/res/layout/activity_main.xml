<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_page"
    tools:context=".activities.MainActivity"
    android:background="@color/color_blue_grey_50"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_blue_50"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/grid_book_appt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_main_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="2dp"
            >

            <ImageView
                android:id="@+id/img_bookappt_main"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:tint="@color/color_main_icon"
                android:src="@drawable/ic_event_note_black_24dp" />

            <TextView
                android:id="@+id/lbl_bookappt_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/img_bookappt_main"
                android:text="Đặt lịch"
                android:textColor="@color/color_main_text"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@color/color_main_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/img_account_main"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:tint="@color/color_main_icon"
                android:src="@drawable/ic_account_circle_black_24dp" />

            <TextView
                android:id="@+id/lbl_account_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/img_account_main"
                android:text="Tài khoản"
                android:textColor="@color/color_main_text"
                android:textSize="16sp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_blue_50"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/grid_appt_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_main_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="2dp"
            >

            <ImageView
                android:id="@+id/img_appt_history_main"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:tint="@color/color_main_icon"
                android:src="@drawable/ic_history_black_24dp" />

            <TextView
                android:id="@+id/lbl_appt_history_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/img_appt_history_main"
                android:text="Lịch sử cuộc hẹn"
                android:textColor="@color/color_main_text"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@color/color_main_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/img_result_main"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:tint="@color/color_main_icon"
                android:src="@drawable/ic_insert_drive_file_black_24dp" />

            <TextView
                android:id="@+id/lbl_result_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/img_result_main"
                android:text="Kết quả xét nghiệm"
                android:textColor="@color/color_main_text"
                android:textSize="16sp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_blue_50"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/grid_treatment_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/color_main_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="2dp"
            >

            <ImageView
                android:id="@+id/img_treat_history_main"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:tint="@color/color_main_icon"
                android:src="@drawable/ic_book_black_24dp" />

            <TextView
                android:id="@+id/lbl_treat_history_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/img_treat_history_main"
                android:text="Lịch sử xét nghiệm"
                android:textColor="@color/color_main_text"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@color/color_main_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/img_result_main2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:tint="@color/color_main_icon"
                />

            <TextView
                android:id="@+id/lbl_result_main2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/img_result_main2"
                android:text=" "
                android:textColor="@color/color_main_text"
                android:textSize="16sp" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>